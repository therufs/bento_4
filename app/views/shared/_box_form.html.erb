<%= form_for(@box) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "What's in your bento?" %>

		<%= f.label "Date made" %>
		<%= f.date_select :made_date, default:Date.today, order: [:day, :month, :year] %>
	</div>


	<%= f.submit "Log it!", class: "btn btn-large btn-primary" %>
<% end %>
