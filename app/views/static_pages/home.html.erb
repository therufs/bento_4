<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/box_form' %>
			</section>
		</aside>
	</div>

<% else %>
	<div class="center hero-unit">
	<h1>Bento Tracker</h1>
		<h2>This is the home page for the <a href="http://justbento.com">bento</a> tracker!</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>
